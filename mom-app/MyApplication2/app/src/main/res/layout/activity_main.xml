<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.srivikashini.myapplication.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back" />

        <Button
            android:id="@+id/button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="300dp"
            android:layout_marginStart="300dp"

            android:background="@drawable/tick" />

    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tool_bar"
        android:layout_marginTop="50dp"
        android:background="@drawable/plus"
        android:columnCount="2"
        android:rowCount="2">


        <Button
            android:id="@+id/one"
            android:layout_width="148dp"
            android:layout_height="85dp"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_row="0"
            android:background="@android:color/transparent"
            android:onClick="btnpressed"
            android:text="GREEN CAPSICUM"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding" />

        <Button
            android:id="@+id/two"
            android:layout_width="147dp"
            android:layout_height="81dp"
            android:layout_column="1"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:layout_row="0"
            android:background="@android:color/transparent"
            android:onClick="btnpressed"
            android:text="RED CAPSICUM"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding" />

        <Button
            android:id="@+id/three"
            android:layout_width="150dp"
            android:layout_height="74dp"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:layout_row="1"
            android:background="@android:color/transparent"
            android:onClick="btnpressed"
            android:text="BLUE CAPSICUM"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding" />

        <Button
            android:id="@+id/four"
            android:layout_width="150dp"
            android:layout_height="77dp"
            android:layout_column="1"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="110dp"
            android:layout_row="1"
            android:background="@android:color/transparent"
            android:onClick="btnpressed"
            android:text="YELLOW CAPSICUM"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding" />
    </GridLayout>

    <TextView
        android:id="@+id/dispstatus"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/linestwo"
        android:gravity="center|fill"
        android:text="capsicum"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="26sp"
        android:textStyle="bold" />


</RelativeLayout>
